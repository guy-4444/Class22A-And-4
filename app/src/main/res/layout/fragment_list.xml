<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#00E394"
    android:layout_margin="16dp">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/frame1_LBL_title"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:layout_margin="16dp"
        android:text="Hello World!"
        android:textColor="#FF2EDD" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:id="@+id/frame1_EDT_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/frame1_LBL_title"
        android:hint="Name"
        android:padding="16dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="30"
            android:imeOptions="actionDone" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/frame1_BTN_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/frame1_EDT_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Refresh"

        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:strokeColor="@color/purple_500"
        app:cornerRadius="50dp"
        />



</RelativeLayout>